<%- include("templates/cabecera.ejs") %>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="css/libro.css">
  <div class="custom-container">
    <div class="libro-form-card animate-new-item">
      <h2 class="section-title"><i class="fas fa-book-open me-2"></i>Datos de Libro</h2>
      <form action="/insertarlibro" method="post">
        <div class="form-row">
          <div class="form-group">
            <label for="cod" class="custom-label">IdLibro:</label>
            <input type="text" name="cod" id="cod" class="form-control custom-input" required>
          </div>
          <div class="form-group">
            <label for="ti" class="custom-label">Título:</label>
            <input type="text" name="ti" id="ti" class="form-control custom-input" required>
          </div>
          <div class="form-group">
            <label for="edi" class="custom-label">IdEditorial:</label>
            <input type="text" name="edi" id="edi" class="form-control custom-input" required>
          </div>
          <div class="form-group">
            <label for="au" class="custom-label">IdAutor:</label>
            <input type="text" name="au" id="au" class="form-control custom-input" required>
          </div>
        </div>
        <button type="submit" class="btn-custom-primary">
          <i class="fas fa-save me-2"></i>Registrar Libro
        </button>
      </form>
    </div>

    <div class="custom-table-container animate-new-item">
      <table class="table custom-table">
        <thead>
          <tr>
            <th><i class="fas fa-hashtag me-2"></i>Código</th>
            <th><i class="fas fa-book me-2"></i>Título</th>
            <th><i class="fas fa-building me-2"></i>idEditorial</th>
            <th><i class="fas fa-user-pen me-2"></i>idAutor</th>
            <th><i class="fas fa-cogs me-2"></i>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% libros.forEach((libro)=>{ %>
            <tr>
              <td style="display: none;">
                <%= libro._id%>
              </td>
              <td>
                <%= libro.idLibro%>
              </td>
              <td>
                <%= libro.titulo%>
              </td>
              <td>
                <%= libro.idEditorial%>
              </td>
              <td>
                <%= libro.idAutor%>
              </td>
              <td>
                <a class="btn btn-edit btnEditara">
                  <i class="fas fa-edit me-1"></i>Editar
                </a>
                <a href="/eliminar/<%=libro._id%>" class="btn btn-delete">
                  <i class="fas fa-trash me-1"></i>Eliminar
                </a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal usando Bootstrap -->
  <div class="modal fade" id="modalLibro" tabindex="-1" aria-labelledby="modalLibroLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title" id="modalLibroLabel"><i class="fas fa-edit me-2"></i>Editar Libro</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/editar" method="post">
            <input type="text" id="e_id" name="e_id" class="form-control" hidden>
            <div class="mb-3">
              <label for="e_cod" class="form-label"><i class="fas fa-hashtag me-2"></i>IdLibro:</label>
              <input type="text" name="e_cod" id="e_cod" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="e_ti" class="form-label"><i class="fas fa-book me-2"></i>Título:</label>
              <input type="text" name="e_ti" id="e_ti" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="e_edi" class="form-label"><i class="fas fa-building me-2"></i>IdEditorial:</label>
              <input type="text" name="e_edi" id="e_edi" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="e_au" class="form-label"><i class="fas fa-user-pen me-2"></i>IdAutor:</label>
              <input type="text" name="e_au" id="e_au" class="form-control" required>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/libro.js">

  </script>
  </body>

  </html>