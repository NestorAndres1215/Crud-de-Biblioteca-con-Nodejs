<%- include("templates/cabecera.ejs") %>


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="css/autor.css">

  <body>
    <div class="custom-container">
      <div class="autor-form-card animate-new-item">
        <h2 class="section-title"><i class="fas fa-user-pen me-2"></i>Datos de Autor</h2>
        <form action="/insertarautor" method="post">
          <div class="form-row">
            <div class="form-group">
              <label for="aut" class="custom-label">IdAutor:</label>
              <input type="text" name="aut" id="aut" class="form-control custom-input" required>
            </div>
            <div class="form-group">
              <label for="nom" class="custom-label">Nombre:</label>
              <input type="text" name="nom" id="nom" class="form-control custom-input" required>
            </div>
            <div class="form-group">
              <label for="ape" class="custom-label">Apellido:</label>
              <input type="text" name="ape" id="ape" class="form-control custom-input" required>
            </div>
            <div class="form-group">
              <label for="pa" class="custom-label">País:</label>
              <input type="text" name="pa" id="pa" class="form-control custom-input" required>
            </div>
          </div>
          <button type="submit" class="btn-custom-primary">
            <i class="fas fa-save me-2"></i>Registrar Autor
          </button>
        </form>
      </div>

      <div class="custom-table-container animate-new-item">
        <table class="table custom-table">
          <thead>
            <tr>
              <th><i class="fas fa-hashtag me-2"></i>IdAutor</th>
              <th><i class="fas fa-user me-2"></i>Nombre</th>
              <th><i class="fas fa-user me-2"></i>Apellido</th>
              <th><i class="fas fa-globe me-2"></i>País</th>
              <th><i class="fas fa-cogs me-2"></i>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% autores.forEach((autor)=> { %>
              <tr>
                <td style="display: none;">
                  <%= autor._id %>
                </td>
                <td>
                  <%= autor.idAutor %>
                </td>
                <td>
                  <%= autor.nombre %>
                </td>
                <td>
                  <%= autor.apellido %>
                </td>
                <td>
                  <%= autor.pais %>
                </td>
                <td>
                  <a class="btn btn-edit btnEditaru">
                    <i class="fas fa-edit me-1"></i>Editar
                  </a>
                  <a href="/eliminarautor/<%= autor._id %>" class="btn btn-delete">
                    <i class="fas fa-trash me-1"></i>Eliminar
                  </a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Modal usando Bootstrap -->
    <div class="modal fade" id="modalAutor" tabindex="-1" aria-labelledby="modalAutorLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-primary text-white">
            <h5 class="modal-title" id="modalAutorLabel"><i class="fas fa-edit me-2"></i>Editar Autor</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/editarautor" method="post">
              <input type="text" id="e_id" name="e_id" class="form-control" hidden>
              <div class="mb-3">
                <label for="e_aut" class="form-label"><i class="fas fa-hashtag me-2"></i>IdAutor:</label>
                <input type="text" name="e_aut" id="e_aut" class="form-control" required>
              </div>
              <div class="mb-3">
                <label for="e_nom" class="form-label"><i class="fas fa-user me-2"></i>Nombre:</label>
                <input type="text" name="e_nom" id="e_nom" class="form-control" required>
              </div>
              <div class="mb-3">
                <label for="e_ape" class="form-label"><i class="fas fa-user me-2"></i>Apellido:</label>
                <input type="text" name="e_ape" id="e_ape" class="form-control" required>
              </div>
              <div class="mb-3">
                <label for="e_pa" class="form-label"><i class="fas fa-globe me-2"></i>País:</label>
                <input type="text" name="e_pa" id="e_pa" class="form-control" required>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Actualizar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/autor.js">

    </script>